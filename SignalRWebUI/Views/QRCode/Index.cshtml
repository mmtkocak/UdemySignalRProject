@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod Oluşturma Sayfası</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" name="value" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <input type="submit" value="QR Kod Oluştur" class="btn btn-warning" />
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-4">
                            @if (ViewBag.QRCodeImage != null)
                            {
                                <img src="@ViewBag.QRCodeImage" style="width:400px; height:400px" />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

