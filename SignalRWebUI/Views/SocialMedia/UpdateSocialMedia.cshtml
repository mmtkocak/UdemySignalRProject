@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya Güncelle</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" />
                            </div>
                            <div class="form-group">
                                <label for="Icon">İkon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon" />
                            </div>
                            <div class="form-group">
                                <label for="Url">Link</label>
                                <input type="text" class="form-control" asp-for="Url" id="Url" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

